{
  "manifest_version": 2,

  "name": "InstantSearch",
  "description": "Just select words or sentence, and there will be a popup showing all kinds of information. Have fun searching!",
  "version": "0.6.1",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "templates/popup.html"
  },
  "icons": {"128": "images/InstantSearch.png"},
  "permissions": [
    "<all_urls>"
  ],
  "options_page": "templates/options.html",
  "web_accessible_resources":[
      "libs/jquery-1.10.2.min.map"
    ],
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "css": ["css/styles.css", "libs/bootstrap/css/bootstrap.min.css"],
      "js": ["libs/jquery-1.10.2.min.js", "libs/bootstrap/js/bootstrap.min.js", "main.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["event.js"],
    "persistent": false
  }
}
