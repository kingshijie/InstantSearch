{
  "manifest_version": 2,

  "name": "InstantSearch",
  "description": "Just select words or sentence, and there will be a popup showing all kinds of information. Have fun searching!",
  "version": "0.5.2",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "templates/popup.html"
  },
  "icons": {"128": "images/InstantSearch.png"},
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "css": ["css/styles.css", "libs/jquery-ui-1.10.3.custom.min.css"],
      "js": ["libs/jquery-1.10.2.min.js", "libs/jquery-ui-1.10.3.min.js", "main.js"]
    }
  ]
}
